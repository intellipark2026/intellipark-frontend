{
  "hosting": [
    {
      "target": "main-site",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/",
          "destination": "/intelli.html"
        }
      ]
    },
    {
      "target": "kiosk-site",
      "public": "kiosk",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    }
  ]
}
